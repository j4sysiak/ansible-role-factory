// Automatically generated by Ansible
Unattended-Upgrade::Allowed-Origins {
{% for pattern in unattended_origins_patterns %}
        {{ pattern }};
{% endfor %}
};

// Czy wysyłać email z powiadomieniem
{% if unattended_email | length > 0 %}
Unattended-Upgrade::Mail "{{ unattended_email }}";
{% endif %}

// Automatyczny restart
Unattended-Upgrade::Automatic-Reboot "{{ unattended_automatic_reboot }}";
Unattended-Upgrade::Automatic-Reboot-Time "{{ unattended_automatic_reboot_time }}";